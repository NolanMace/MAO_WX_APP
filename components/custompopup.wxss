/* components/custompopup.wxss */
.flex-column {
    display: flex;
    flex-direction: column;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-row-reverse-align-center {
    display: flex;
    flex-direction: row-reverse;
}

.flex-row-align-center {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex-row-between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.font-size-small {
    font-size: 24rpx;
}

.font-size-35 {
    font-size: 35;
}

.margin-bottom {
    margin-bottom: 10rpx;
}

.small-checkbox {
    transform: scale(0.6);
    /* 设置大小缩放 */
}

.background_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

/*对话框 */
.attr-box-down {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: url('https://yfsmax.oss-cn-hangzhou.aliyuncs.com/confirmBg.png');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    transform: translateY(105%);
    transition: transform 0.3s ease;
    z-index: 1001;
}

.attr-box-up {
    transform: translateY(0);
}

.head {
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    margin-bottom: 35rpx;
}

.back {
    position: absolute;
    right: 5rpx;
    top: 10rpx;
    height: 60rpx;
    width: 60rpx;
}

.back image {
    height: 100%;
    width: 100%;
}

.ctTitleContainer {
    width: 250rpx;
    height: 70rpx;
    position: relative;
}

.ctTitleText {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 250rpx;
    height: 70rpx;
    font-size: 40rpx;
    font-weight: bolder;
    color: white;
    position: absolute;
    letter-spacing: 10rpx;
    z-index: 3;
}

.ctTitleBorder {
    position: absolute;
    -webkit-text-stroke: 10rpx black;
    z-index: 2;
}

.container {
    width: 680rpx;
    margin: auto 35rpx;
}