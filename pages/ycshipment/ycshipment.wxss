/* pages/ycshipment/ycshipment.wxss */
.addressCard {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    width: 650rpx;
    height: 200rpx;
    margin-left: auto;
    margin-right: auto;
    background-image: url('https://yfsmax.oss-cn-hangzhou.aliyuncs.com/cardBg.png');
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.addressIcon {
    height: 100rpx;
    width: 100rpx;
}

.marginLeft{
    margin-left: 15rpx;
}

.marginLeftP {
    margin-left: 45rpx;
}

.marginBottom{
    margin-bottom: 15rpx;
}

.result_grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-row-gap: 40rpx;
    justify-items: center;
    align-items: center;
    padding-top: 40rpx;
}

.result_card {
    width: 130rpx;
    height: 175rpx;
}

.image_container {
    width: 130rpx;
    height: 130rpx;
    position: relative;
    border: rgb(216, 216, 216) solid 4rpx;
}

.image_container image {
    width: 100%;
    height: 100%;
}

.levelLabelContainer {
    bottom: 0;
    right: 0;
    min-width: 30rpx;
    height: 28rpx;
    position: absolute;
}

.levelLabel {
    display: flex;
    flex-direction: row-reverse;
    min-width: 40rpx;
    height: 28rpx;
    padding-right: 10rpx;
    padding-left: 45rpx;
    background: linear-gradient(to right, transparent, #c50101);
    color: white;
    clip-path: polygon(25% 0%, 100% 0%, 100% 100%, 0% 100%);
}

.result_name {
    font-size: 22rpx;
    width: 100%;
    margin: 10rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: white;
}

.summitButtonContainer {
    width: 100%;
    height: 80rpx;
    position: fixed;
    bottom: 200rpx;
}

.summitButton {
    background-image: url('https://yfsmax.oss-cn-hangzhou.aliyuncs.com/cardBg.png');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    width: 400rpx;
    height: 80rpx;
    border: #c31d0c solid 3rpx;
    border-radius: 10rpx;
}